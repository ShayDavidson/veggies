%h1.page-header= @veggie.heb_name
%canvas{:id => 'chart', :width => 800, :height => 400}

:javascript
  var data = {
  	labels : #{@dates},
  	datasets : [
  		{
  			fillColor : "rgba(220,220,220,0.5)",
  			data : #{@values}
  		}
  	]
  }


  var ctx = document.getElementById("chart").getContext("2d");
  var chart = new Chart(ctx).Line(data,{});